{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Ingredient</th>
                <td>{{ recipe.ingredient }}</td>
            </tr>
            <tr>
                <th>Portions</th>
                <td>{{ recipe.portions }}</td>
            </tr>
            <tr>
                <th>Preparation_time</th>
                <td>{{ recipe.preparationTime }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ recipe.photo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recipe_index') }}">back to list</a>

    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
